# AnchorLayoutExample:
<AnchorLayoutExample>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

# BoxLayoutExample:
<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, None
        height: "60dp"
        pos_hint: {"center_x": .5}

    BoxLayout:
        orientation: "vertical"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"

    Label:
        text: "C"    

